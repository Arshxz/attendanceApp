<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Approve Leaves</title>
</head>
<body>
    <h1>Approve Student Leaves</h1>
    <table>
        <tr>
            <th>Student</th>
            <th>Leave Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        <% leaveRequests.forEach(function(leave) { %>
        <tr>
            <td><%= leave.student_id %></td>
            <td><%= leave.leave_date %></td>
            <td><%= leave.status %></td>
            <td>
                <form action="/faculty/approveLeave" method="POST">
                    <input type="hidden" name="leaveId" value="<%= leave.leave_id %>">
                    <select name="status">
                        <option value="approved">Approve</option>
                        <option value="rejected">Reject</option>
                    </select>
                    <button type="submit">Submit</button>
                </form>
            </td>
        </tr>
        <% }); %>
    </table>
    <a href="/faculty/dashboard">Back to Dashboard</a>
</body>
</html>